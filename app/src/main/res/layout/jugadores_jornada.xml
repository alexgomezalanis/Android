<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_jugador1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imagen_jugador1"
                android:layout_weight="9"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/nombre_jugador1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nacho Justicia"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/posicion_campo1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="MC"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/posicion_clasificacion1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Pos: 1ยบ"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/winrate1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="W/R: 86%"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#000000"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/ultimo_partido1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ultimo: 1/05/2016 (Ganado)"
                    android:gravity="center"
                    android:textColor="#000000"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_jugador2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imagen_jugador2"
                android:layout_weight="9"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/nombre_jugador2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nacho Justicia"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/posicion_campo2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="MC"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/posicion_clasificacion2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Pos: 1ยบ"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/winrate2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="W/R: 86%"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#000000"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/ultimo_partido2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ultimo: 1/05/2016 (Ganado)"
                    android:gravity="center"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>
</LinearLayout>